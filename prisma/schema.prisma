generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model Event {
    id          Int       @id() @default(autoincrement())
    eventname   String
    eventdate   String
    eventTime   String
    location    String
    bgColor     String
    coverImage  String
    images      Image[]
}

model Image {
    id        Int    @id() @default(autoincrement())
    url       String
    eventId   Int
    event     Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)
}